<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffff"
android:orientation="vertical" >
    
    <LinearLayout 
         android:orientation="horizontal" 
         android:background="@android:color/white"
         android:layout_width="fill_parent" 
         android:layout_height="50dp"
         > 
          
             <ImageView 
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:background="@drawable/retur1"
                 android:layout_marginTop="0dp"
                 android:layout_marginLeft="0dp"/>
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="详情"
                 
                 android:layout_marginLeft="110dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#5B5B5B"
                 android:textSize="18sp"/>
         
     </LinearLayout>

    <ScrollView 
    android:id="@+id/scview"
    android:layout_width="fill_parent" 
    android:layout_height="500dp"
    android:scrollbars="none"
    android:layout_marginTop="50dp"
    >
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ImageView 
            android:id="@+id/repic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt1"
            
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
             <TextView 
                 android:id="@+id/rename"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="老北京懒龙"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="15dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#5B5B5B"
                 android:textSize="24sp"/>
             
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >
            
                   <TextView 
                 android:id="@+id/viewno"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="XXX人浏览"
                 
                 android:layout_marginLeft="15dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#9D9D9D"
                 android:textSize="14sp"/>
                     <TextView 
                 android:id="@+id/collectno"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="XXX人收藏"
                 
                 android:layout_marginLeft="30dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#9D9D9D"
                 android:textSize="14sp"/>
            </LinearLayout>
            
              <TextView 
                 android:id="@+id/redetail"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/redetail"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="11dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#5B5B5B"
                 android:textSize="16sp"/>
              
                 <View android:background="@drawable/shape_line"   android:layout_marginTop="20dp"  android:layout_width="fill_parent" android:layout_height="1.0px" />
              
               <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >
               <TextView 
                 android:id="@+id/taste"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="口味: XXX"
                 
                 android:layout_marginLeft="15dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#9D9D9D"
                 android:textSize="14sp"/>
                     <TextView 
                 android:id="@+id/craft"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="工艺: XXX"
                 
                 android:layout_marginLeft="30dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#9D9D9D"
                 android:textSize="14sp"/>
            </LinearLayout>
              
            <View android:background="@drawable/shape_line"  android:layout_marginTop="10dp"  android:layout_width="fill_parent" android:layout_height="1.0px" />
               
            
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >
           <ImageView
               android:layout_width="20dp"
                 android:layout_height="20dp"
                  android:layout_marginLeft="12dp"
                 android:background="@drawable/ingreicon"
               
                />
           <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="食材清单"   
                 
                 android:layout_marginLeft="5dp"
                 android:textColor="#5B5B5B"
                 android:textSize="17sp"/>
           </LinearLayout>
           
        
                
           
            <TextView 
                 android:id="@+id/ingredient"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/ingredient"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="11dp"
                 android:layout_gravity="center_vertical"
                 android:textColor="#5B5B5B"
                 android:background="#F0F0F0"
                 android:paddingTop="20dp"
                 android:paddingBottom="20dp"
                 android:paddingLeft="15dp"
                 android:paddingRight="15dp"
                 android:textSize="16sp"/>
           
            
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >
           <ImageView
               android:layout_width="25dp"
                 android:layout_height="25dp"
                  android:layout_marginLeft="12dp"
                 android:background="@drawable/prcesicon"
               
                />
           <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="做法  共X步"   
                 
                 android:layout_marginLeft="5dp"
                 android:textColor="#5B5B5B"
                 android:textSize="17sp"/>
           </LinearLayout>
           
            <ListView 
        android:id="@+id/processlist"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:divider="@null"
        ></ListView>
            
            
        </LinearLayout>
       
    </LinearLayout>
        
    </ScrollView>
    
    
   <LinearLayout
         android:orientation="vertical" 
         android:background="@android:color/white"
         android:layout_width="fill_parent" 
         android:layout_gravity="bottom"
         android:layout_height="60dp" >
     <View android:background="@drawable/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
       
    <LinearLayout 
         android:orientation="horizontal" 
         android:background="@android:color/white"
         android:layout_width="fill_parent" 
     
         android:layout_height="60dp"  >
         
        
         <LinearLayout 
         android:orientation="horizontal" 
         android:background="@android:color/white"
         android:layout_width="150dp" 
         android:layout_height="60dp"
         android:id="@+id/share"
         > 
          
             <ImageView 
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginTop="15dp"
                 android:layout_marginLeft="50dp"
                 android:background="@drawable/share"
                />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="分享"   
                  android:layout_marginTop="15dp"
                 android:layout_marginLeft="5dp"
                 android:textColor="#5B5B5B"
                 android:textSize="16sp"/>
         
     </LinearLayout>
     
         <LinearLayout 
         android:orientation="horizontal" 
         android:background="@android:color/white"
         android:layout_width="150dp" 
         android:layout_height="60dp"
         android:id="@+id/collect"
         > 
          
             <ImageView 
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="50dp"
                 android:background="@drawable/collect"
                />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="收藏"
                  android:layout_marginTop="15dp"
                 android:layout_marginLeft="5dp"
                         
                 android:textColor="#5B5B5B"
                 android:textSize="16sp"/>
         
     </LinearLayout>
         
        
        
   </LinearLayout>     
        
    </LinearLayout>

</FrameLayout>