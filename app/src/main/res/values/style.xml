<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowIsFloating">true</item>     <!-- 设置未浮动窗口 -->
		<item name="android:windowFrame">@null</item>         <!-- 设置无边框 -->     
		<item name="android:windowNoTitle">true</item>        <!-- 设置无标题 -->
		<item name="android:windowBackground">@color/sc_transparent_background</item>  <!-- 设置完全透明 -->
		<item name="android:backgroundDimEnabled">true</item>                          <!-- 设置屏幕变暗 -->   
	</style>

	<style name="tab_rb_style">
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_weight" >1</item>
       
        <item name="android:button" >@null</item>
        <item name="android:textColor" >@color/tab_selector_tv_color</item>
        <item name="android:gravity" >center</item>
         <item name="android:textSize" >13.0sp</item>
        
    </style>



</resources>